<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity">

    <com.home.customcalendar.calendar.CustomCalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:daySelectedBackgroundColor="@color/tip_normal"
        app:dayTextColor="@color/design_default_color_error"
        app:selectedBetweenBackgroundColor="@color/purple_700"
        app:dayTextSize="6sp"
        app:isShowAfterTodayDate="true"
        app:titleTextSize="6sp"
        app:todayBackgroundColor="@color/defalut_day_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>